<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--====================== primary_text 主文本 wrap_wrap=====================-->
    <!--  primary_text  wrap_wrap -->
    <style name="primary_text_color" parent="wrap_wrap">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!--  text_color_333333_20 20sp wrap_wrap -->
    <style name="primary_text_color_20" parent="primary_text_color">
        <item name="android:textSize">20sp</item>
    </style>

    <!--  text_color_333333_18 18sp wrap_wrap -->
    <style name="primary_text_color_18" parent="primary_text_color">
        <item name="android:textSize">18sp</item>
    </style>

    <!--  text_color_333333_16 16sp wrap_wrap -->
