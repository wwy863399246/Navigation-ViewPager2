<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppSplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_logo_welcome_theme</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
        <item name="textColorPrimary">@color/white</item>
    </style>
</resources>